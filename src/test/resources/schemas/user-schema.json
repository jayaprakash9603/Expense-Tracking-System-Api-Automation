{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Schema",
  "type": "object",
  "required": ["id", "email", "fullName"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "fullName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 5
    },
    "mobile": {
      "type": ["string", "null"],
      "pattern": "^[0-9]{10}$"
    },
    "roles": {
      "type": ["array", "null"],
      "items": {
        "type": "string"
      }
    },
    "createdAt": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "updatedAt": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  }
}
