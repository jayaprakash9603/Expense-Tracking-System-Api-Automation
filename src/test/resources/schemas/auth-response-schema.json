{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auth Response Schema",
  "type": "object",
  "required": ["status", "message"],
  "properties": {
    "status": {
      "type": "boolean"
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "jwt": {
      "type": ["string", "null"],
      "minLength": 10
    }
  }
}
