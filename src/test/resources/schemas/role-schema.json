{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Role Schema",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 255
    },
    "createdAt": {
      "type": ["string", "null"]
    },
    "updatedAt": {
      "type": ["string", "null"]
    },
    "users": {
      "type": ["array", "null"],
      "items": {
        "type": "integer"
      }
    }
  },
  "additionalProperties": true
}
